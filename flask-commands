1)  sudo yum update -y

2)  sudo yum install python3 -y

3)  python3 --version

4)  sudo pip3 install flask
   
5)  pip3 list

6)  sudo yum install git wget
   
7)  wget https://raw.githubusercontent.com/busrasyazra/my-hands-on-repo/master/flask-01-02-hello-world-app-Jinja-Template%20/flask-01-hello-world-app/hello-world-app.py
  
8)  ls

9)  sudo vi hello-world-app.py 
   
10)  sudo python3 hello-world-app.py

11)  ctrl+c  
